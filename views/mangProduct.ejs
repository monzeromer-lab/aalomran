<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Manage Product</title>
	 <!-- Bootstrap -->
    <link href="/web/public/css/bootstrap-4.4.1.css" rel="stylesheet">
    <link rel="stylesheet"  href="/web/public/css/style.css">
</head>
<body>

	<!-- start navbar -->
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		  <a class="navbar-brand" href="#">Palmera</a>
		  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		    <span class="navbar-toggler-icon"></span>
		  </button>


		  <div class="collapse navbar-collapse" id="navbarSupportedContent">
		    <ul class="navbar-nav mr-auto">
		      <li class="nav-item">
		        <a class="nav-link" href="/web/inventory">Inventory</a>
		      </li>
			  <li class="nav-item">
                <a class="nav-link" href="/web/bakery">Order<span class="sr-only">(current)</span></a>
              </li>
			      <li class="nav-item dropdown active" >
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Products
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/web/newProduct">Product Information</a>
                        <a class="dropdown-item" href="/web/newProductType">New Product Type </a>
                        <a class="dropdown-item" href="/web/mangProduct">Manage Products</a>
                    </div>
                </li>
		     </ul>
		    </div>
		</nav>	
	<!-- End navbar -->

	<!-- start manage porduct -->
	<div class="manage_product">
		<div class="container">
			<div class="section-title mt-5">
				<h2>Manage Product</h2>
			</div>
			<div class="row">
				
				<!-- start product item -->
				<div class=" col-md-6 d-flex justify-content-center mb-5">
							<div class="product_item mx-auto mt-5">
								<div class="d-flex justify-content-center align-items-center">
									<img src="/web/<%= result.image %>" class="product_item_pic img-fluid"id="output" width="200px" height="250px">
				               </div>	
				                <div class="product_label">
				                    <h5>Product Name: <span span style="color: orange"><%= result.name %></span> </h5>
				                </div>
				                <div class="product_type">
				                    <h5>Product Type: <span span style="color: orange"><%= result.category %></span> </h5>
				                </div>

								<div class="product_Quaintity">
				                    <h5>Product Quaintity: <span style="color: orange"><%= result.stok %> items</span> </h5>
				                </div>	
							</div>
				</div>
				<!-- End product item -->			
					<div class="col-md-6"> <!--Start Edit -->
							<div class="section-title">
								<span></span>
								<h2>Edit Product</h2>
							</div>
							<div class="edit_product mb-5">
								<form action="/web/products/edit/<%= result.id %>" method="post" enctype="multipart/form-data" >
									<label>Edit Product Name</label>
									<input type="text" name="name"  value="<%= result.name %>" class="form-control">
									<label>Edit Product Price</label>
									<input type="text" name="price"  value="<%= result.price %>" class="form-control">
									<label>Edit Product Sold</label>
									<input type="text" name="sold"  value="<%= result.sold %>" class="form-control">
									<label>Edit Product Quantitiy</label>
									<input type="text" name="stok"  value="<%= result.stok %>" class="form-control">
									<label>Edit Product Type</label>
									<select name="category" class="form-control select2" style="width: 100%;" required>
		                        		<option selected="selected" >Bread</option>
		                        		<option>Muffins</option>
										<option>Cake</option>
		                        		<option>Pastry</option>
		                      		</select>

									  <div class="form-group">
		                      <label>Unit</label>
		                      <select name="unit" class="form-control select2" style="width: 100%;" required>
		                        <option selected="selected" >Kilo</option>
		                        <option>Berry</option>
		                        <option>Refill</option>
		                      </select>
		                    </div>

									<div class="form-group">
						                <label>Activeate product</label>
						                <select class="form-control select2" name="availability" style="width: 100%;" required>
						                        <option selected="selected" value="1">Active</option>
						                        <option value="0">Not Active</option>
						                </select>
					                </div>

									<div class="form-group">
		                        <label> Produce date:</label>
		                          <div class="input-group date" >
		                              <input type="date" class="form-control datetimepicker-input" name="produce" required />
		                              <div class="input-group-append" >
		                                  <div class="input-group-text"><i class="fa fa-calendar"></i></div>
		                              </div>
		                          </div>
		                      </div>

							  <div class="form-group">
		                        <label> End date:</label>
		                          <div class="input-group date" >
		                              <input type="date" class="form-control datetimepicker-input" name="end" required />
		                              <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker" >
		                                  <div class="input-group-text"><i class="fa fa-calendar"></i></div>
		                              </div>
		                          </div>
		                      </div>
									<label for="file" style="cursor: pointer;" class="btn btn-primary mt-3 mb-3">Edit Product Image</label>
									<input type="file" name="image" id="file" onchange="loadFile(event)" style="display: none;" class="form-control">

									<input type="submit" class="btn btn-block text-white font-weight-bold" style="background-color: orange">

								</form>
							</div>
					</div> <!--End edit -->
 

			</div>
		</div>
	</div>
	<!-- End manage porduct -->





    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/web/public/js/jquery-3.4.1.min.js"></script>

    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/web/public/js/popper.min.js"></script>
    <script src="/web/public/js/bootstrap-4.4.1.js"></script>
    <script >
    	let loadFile =(event) => {
    		let imageg = document.getElementById('output');
    		imageg.src = URL.createObjectURL(event.target.files[0]);
    	};
    </script>
</body>
</html>